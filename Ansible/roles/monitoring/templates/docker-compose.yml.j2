version: "3.8"

services:
  prometheus:
    image: "prom/prometheus:{{ prometheus_version }}"
    container_name: prometheus
    user: "65534:65534"  # nobody
    ports:
      - "{{ prometheus_port }}:9090"
    volumes:
      - "{{ monitoring_prometheus_config_path }}:/etc/prometheus/prometheus.yml:ro"
      - "{{ monitoring_alert_rules_path }}:/etc/prometheus/alert-rules.yml:ro"
      - "{{ monitoring_prometheus_data_dir }}:/prometheus"
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.path=/prometheus"
      - "--storage.tsdb.retention.time={{ prometheus_retention_days }}d"
    networks:
      - {{ monitoring_docker_network }}

  grafana:
    image: "grafana/grafana:{{ grafana_version }}"
    container_name: grafana
    user: "472:472"  # utilisateur grafana
    ports:
      - "{{ grafana_port }}:3000"
    environment:
      GF_SECURITY_ADMIN_USER: "{{ grafana_admin_user }}"
      GF_SECURITY_ADMIN_PASSWORD: "{{ grafana_admin_password }}"
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_AUTH_ANONYMOUS_ENABLED: "false"
      GF_PATHS_PROVISIONING: "/etc/grafana/provisioning"
    volumes:
      - "{{ monitoring_grafana_data_dir }}:/var/lib/grafana"
      - "{{ monitoring_grafana_provisioning_dir }}:/etc/grafana/provisioning"
    depends_on:
      - prometheus
    networks:
      - {{ monitoring_docker_network }}

  alertmanager:
    image: "prom/alertmanager:{{ alertmanager_version }}"
    container_name: alertmanager
    user: "65534:65534"  # nobody
    ports:
      - "{{ alertmanager_port }}:9093"
    volumes:
      - "{{ monitoring_alertmanager_config_path }}:/etc/alertmanager/alertmanager.yml:ro"
      - "{{ monitoring_alertmanager_data_dir }}:/alertmanager"
    networks:
      - {{ monitoring_docker_network }}

networks:
  {{ monitoring_docker_network }}:
    driver: bridge
