; Zone file for {{ zone.name }} generated by bind9_docker role

$TTL 86400
@   IN  SOA {{ zone.ns_records[0] }}. {{ zone.admin }}. (
            {{ zone.serial }} ; Serial
            3600          ; Refresh
            600           ; Retry
            86400         ; Expire
            86400 )       ; Minimum

; Name servers
{% for ns in zone.ns_records %}
@   IN  NS  {{ ns }}.
{% endfor %}

; Resource records
{% for rr in zone.rrs %}
{{ rr.label }}    IN  {{ rr.type }}    {{ rr.rdata }}
{% endfor %}
