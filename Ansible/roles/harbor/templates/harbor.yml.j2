# Harbor configuration generated by Ansible

hostname: {{ harbor_hostname }}
http:
  port: {{ harbor_http_port }}

external_url: {{ harbor_external_url }}

data_volume: {{ harbor_data_dir }}

harbor_admin_password: {{ harbor_admin_password }}

log:
  level: info
  local:
    rotate_count: 50
    rotate_size: 200M
    location: {{ harbor_data_dir }}/log

database:
  password: {{ harbor_admin_password }}
  max_idle_conns: 50
  max_open_conns: 100

redis:
  max_idle_conns: 50

trivy:
  enabled: {{ harbor_trivy_enabled | bool | lower }}
  ignore_unfixed: false
  skip_update: false
