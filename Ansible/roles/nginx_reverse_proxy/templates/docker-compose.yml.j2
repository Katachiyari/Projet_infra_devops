version: "3.9"

services:
  nginx:
    image: {{ nginx_rp_image }}
    container_name: nginx-reverse-proxy
    restart: unless-stopped
    ports:
      - "{{ nginx_rp_http_port }}:80"
      - "{{ nginx_rp_https_port }}:443"
      - "{{ nginx_rp_health_port }}:8080"
    volumes:
      - "{{ nginx_rp_config_dir }}/nginx.conf:/etc/nginx/nginx.conf:ro"
      - "{{ nginx_rp_logs_dir }}:/var/log/nginx"
      - "{{ nginx_rp_ssl_dir }}/wildcard.lab.local.crt:/etc/nginx/ssl/wildcard.lab.local.crt:ro"
      - "{{ nginx_rp_ssl_dir }}/wildcard.lab.local.key:/etc/nginx/ssl/wildcard.lab.local.key:ro"
    networks:
      - nginx_net

  nginx-prometheus-exporter:
    image: {{ nginx_rp_exporter_image }}
    container_name: nginx-prometheus-exporter
    restart: unless-stopped
    command:
      - "-nginx.scrape-uri=http://nginx:8080/health"
    ports:
      - "{{ nginx_rp_metrics_port }}:9113"
    depends_on:
      - nginx
    networks:
      - nginx_net

networks:
  nginx_net:
    driver: bridge
