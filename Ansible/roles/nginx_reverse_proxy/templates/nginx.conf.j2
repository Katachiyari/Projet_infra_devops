user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 4096;
    use epoll;
    multi_accept on;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format json_combined escape=json
        '{'
        '"time_local":"$time_local",'
        '"remote_addr":"$remote_addr",'
        '"request":"$request",'
        '"status":$status,'
        '"body_bytes_sent":$body_bytes_sent,'
        '"request_time":$request_time,'
        '"upstream_response_time":"$upstream_response_time",'
        '"http_user_agent":"$http_user_agent"'
        '}';

    access_log /var/log/nginx/access.log json_combined;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 1024M;

    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript \
               application/json application/javascript application/xml+rss;

    limit_req_zone $binary_remote_addr zone=general_limit:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=50r/s;
    limit_conn_zone $binary_remote_addr zone=conn_limit:10m;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    upstream harbor_backend {
        server {{ nginx_rp_backends.harbor.host }}:{{ nginx_rp_backends.harbor.port }} max_fails=3 fail_timeout=30s;
    }

    upstream portainer_backend {
        server {{ nginx_rp_backends.portainer.host }}:{{ nginx_rp_backends.portainer.port }} max_fails=3 fail_timeout=30s;
    }

    upstream gitlab_backend {
        server {{ nginx_rp_backends.gitlab.host }}:{{ nginx_rp_backends.gitlab.port }} max_fails=3 fail_timeout=30s;
    }

    upstream gitlab_registry_backend {
        server {{ nginx_rp_backends.gitlab_registry.host }}:{{ nginx_rp_backends.gitlab_registry.port }} max_fails=3 fail_timeout=30s;
    }

    upstream taiga_backend {
        server {{ nginx_rp_backends.taiga.host }}:{{ nginx_rp_backends.taiga.port }} max_fails=3 fail_timeout=30s;
    }

    upstream edgedoc_backend {
        server {{ nginx_rp_backends.edgedoc.host }}:{{ nginx_rp_backends.edgedoc.port }} max_fails=3 fail_timeout=30s;
    }

    upstream grafana_backend {
        server {{ nginx_rp_backends.grafana.host }}:{{ nginx_rp_backends.grafana.port }} max_fails=3 fail_timeout=30s;
    }

    upstream prometheus_backend {
        server {{ nginx_rp_backends.prometheus.host }}:{{ nginx_rp_backends.prometheus.port }} max_fails=3 fail_timeout=30s;
    }

    upstream alertmanager_backend {
        server {{ nginx_rp_backends.alertmanager.host }}:{{ nginx_rp_backends.alertmanager.port }} max_fails=3 fail_timeout=30s;
    }

    server {
        listen 80;
        server_name harbor.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name harbor.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;
        limit_conn conn_limit 10;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffering off;
        proxy_request_buffering off;

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        location / {
            proxy_pass http://harbor_backend;
        }

        location /api/v2.0/events {
            proxy_pass http://harbor_backend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

    server {
        listen 80;
        server_name portainer.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name portainer.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;

        location / {
            proxy_pass http://portainer_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /api/websocket/ {
            proxy_pass http://portainer_backend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

    server {
        listen 80;
        server_name gitlab.{{ nginx_rp_domain }} git-lab.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name gitlab.{{ nginx_rp_domain }} git-lab.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=api_limit burst=50 nodelay;

        location / {
            proxy_pass http://gitlab_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }

        location ~ ^/([\w\-\.]+)/([\w\-\.]+)\.git/ {
            proxy_pass http://gitlab_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 600s;
        }
    }

    server {
        listen 80;
        server_name registry.gitlab.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name registry.gitlab.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;
        client_max_body_size 0;

        location / {
            proxy_pass http://gitlab_registry_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 900s;
        }
    }

    server {
        listen 80;
        server_name taiga.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name taiga.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=api_limit burst=30 nodelay;

        location / {
            proxy_pass http://taiga_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /events {
            proxy_pass http://taiga_backend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

    server {
        listen 80;
        server_name edgedoc.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name edgedoc.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;

        location / {
            proxy_pass http://edgedoc_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    server {
        listen 9113;
        server_name _;

        location /metrics {
            stub_status on;
            access_log off;
            allow 172.16.100.0/24;
            deny all;
        }
    }

    server {
        listen 8080;
        server_name _;

        location /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

    }

    server {
        listen 80;
        server_name grafana.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }
    server {
        listen 443 ssl http2;
        server_name grafana.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;

        location / {
            proxy_pass http://grafana_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
    
    server {
        listen 80;
        server_name prometheus.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;    
    }

    server {
        listen 443 ssl http2;
        server_name prometheus.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;

        location / {
            proxy_pass http://prometheus_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    server {
        listen 80;
        server_name alertmanager.{{ nginx_rp_domain }} alert-manager.{{ nginx_rp_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name alertmanager.{{ nginx_rp_domain }} alert-manager.{{ nginx_rp_domain }};

        ssl_certificate /etc/nginx/ssl/wildcard.lab.local.crt;
        ssl_certificate_key /etc/nginx/ssl/wildcard.lab.local.key;

        limit_req zone=general_limit burst=20 nodelay;

        location / {
            proxy_pass http://alertmanager_backend;
